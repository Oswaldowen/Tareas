def generar_espiral(numero):
    espiral = [[0] * numero for _ in range(numero)]

    fila, columna = 0, 0
    direccion = 1

    for i in range(numero ** 2):
        if not 0 <= fila < numero or not 0 <= columna < numero:
            fila -= direccion * (fila // numero)
            columna -= direccion * (columna // numero)
        espiral[fila][columna] = i + 1
        fila += direccion
        columna += direccion

        if fila == numero or fila == -1:
            fila -= direccion
            columna += direccion
            direccion *= -1
        elif columna == numero or columna == -1:
            fila += direccion
            columna -= direccion
            direccion *= -1

    return espiral


def imprimir_espiral(espiral):
    for fila in espiral:
        print(' '.join(str(n) for n in fila))


def generar_y_imprimir_espiral(numero):
    espiral = generar_espiral(numero)
    imprimir_espiral(espiral)


numero = int(input("Escriba un nÃºmero: "))
generar_y_imprimir_espiral(numero)

for i in range(0, numero * 10, numero):
    print('#' * numero)
